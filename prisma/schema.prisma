generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  first_name String
  last_name String
  password String
  email String @unique
  jobs_applied UserAppliedJobs[]
}

model JobListing {
  id     Int     @id @default(autoincrement())
  job_title String
  skills_required Json?
  is_urgent Boolean @default(false)
  status JobStatus @default(OPEN)
  yrs_required Int
  users_applied UserAppliedJobs[]
  created DateTime @default(now())
}

model UserAppliedJobs {
  user User? @relation(fields: [user_id], references: [id])
  user_id Int
  job_id Int
  job JobListing @relation(fields: [job_id], references: [id])
  created DateTime @default(now())

  @@id([user_id, job_id])
}

enum JobStatus {
  OPEN
  CLOSED
}